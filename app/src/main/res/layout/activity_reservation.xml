<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backghroundcolor"
        tools:context=".ui.fragment.PostFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/notice"
            android:text="Reservations are FREE. Once your seat is reserved,
            your driver will immediately be informed."
            android:textColor="@color/colorPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ic_departure"
            android:background="@drawable/ic_depart"
            android:layout_below="@+id/notice"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/departure_city"
            android:layout_toRightOf="@+id/ic_price"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/notice"
            android:textColor="@color/textColorPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ottawa" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ic_arrival"
            android:background="@drawable/ic_marker"
            android:layout_below="@+id/ic_departure"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/arrival_city"
            android:layout_toRightOf="@+id/ic_arrival"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/ic_departure"
            android:textColor="@color/textColorPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Toronto" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ic_calendar"
            android:background="@drawable/ic_calendar"
            android:layout_below="@+id/arrival_city"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/departure_date"
            android:layout_toRightOf="@+id/ic_calendar"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/arrival_city"
            android:textColor="@color/textColorPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Departure Date" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ic_time"
            android:background="@drawable/ic_time"
            android:layout_below="@+id/departure_date"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/departure_time_label"
            android:layout_toRightOf="@+id/ic_time"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/departure_date"
            android:textColor="@color/textColorPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Departure Time" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ic_price"
            android:background="@drawable/ic_price"
            android:layout_below="@+id/departure_time_label"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price_label"
            android:layout_toRightOf="@+id/ic_price"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/departure_time_label"
            android:textColor="@color/textColorPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Price" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginBottom="80dp"
            android:maxLines="1"
            android:id="@+id/reservationBtn"
            android:text="Make a reservation"
            android:textColor="@color/textColorPrimary"
            android:layout_alignRight="@+id/price"
            android:layout_alignParentBottom="true"
            android:background="@drawable/oval_button" />

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>