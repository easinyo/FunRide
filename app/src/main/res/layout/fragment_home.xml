<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/windowBackground"
        tools:context=".ui.fragment.SearchtFragment">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ic_departure"
            android:background="@drawable/ic_depart"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/departure"
            android:layout_toRightOf="@+id/ic_departure"
            android:layout_marginTop="25dp"
            android:textColor="@color/textColorPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:hint="Departure city"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ic_marker"
            android:background="@drawable/ic_marker"
            android:layout_below="@+id/departure"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/arrival"
            android:layout_toRightOf="@+id/ic_marker"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/departure"
            android:textColor="@color/textColorPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:hint="Arrival city"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ic_calendar"
            android:background="@drawable/ic_calendar"
            android:layout_below="@+id/arrival"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:text="DATE"
            android:layout_toRightOf="@+id/ic_calendar"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/arrival"
            android:textColor="@color/textColorPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <TextView
            android:id="@+id/error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search"
            android:textColor="@color/textColorPrimary"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:textSize="28dp"
            android:visibility="gone" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/date"
            android:maxLines="1"
            android:id="@+id/search"
            android:text="@string/search_ride"
            android:textColor="@color/textColorPrimary"
            android:background="@drawable/oval_button"/>

        <ListView
            android:id="@+id/search_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search"></ListView>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>